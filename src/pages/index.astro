	<style>
		body {
			margin: 0;
			height: 100vh;
			display: grid;
			place-items: center;
			background: #161718;
			overflow: hidden;
		}

		a {
			font: 700 30px consolas;
			color: #fff;
			text-decoration: none;
			text-transform: uppercase;
			overflow: hidden;
			border-radius: 5px;
			transition: 0.2s;
			transform: scale(2);
		}

		span {
			position: relative;
			color: #fff;
		}

		.liquid {
			position: absolute;
			left: 0;
			width: 100%;
			height: 50%;
			bottom:0;
			background: #7293ff;
			box-shadow: inset 0 0 50px rgba(0, 0, 0, 0.7);
			z-index: -1;
			transition: 0.6s;
		}

		.liquid::after,
		.liquid::before {
			position: absolute;
			content: "";
			/* width: 200%;
			height: 400%; */
			left:0px;
			width: 4000px;
			height:2000px;
			top: -50%;
			transform: translate(-25%, -75%);
		}

		.liquid::after {
			border-radius: 45%;
			background: rgba(20, 20, 20, 1);
			box-shadow: 0 0 10px 5px #7293ff, inset 0 0 5px #7293ff;
			animation: animate 16s linear infinite;
			opacity: 0.8;
		}

		.liquid::before {
			border-radius: 40%;
			box-shadow: 0 0 10px rgba(26, 26, 26, 0.5),
				inset 0 0 5px rgba(26, 26, 26, 0.5);
			background: rgba(26, 26, 26, 0.5);

			animation: animate 16s linear infinite;
		}

		@keyframes animate {
			0% {
				transform: translate(-25%, -75%) rotate(0);
			}
			100% {
				transform: translate(-25%, -75%) rotate(360deg);
			}
		}

		a:hover {

		}

		.hover-box {
			padding:5px;
			border-radius: 5px;
            background-color: #3498db;
			/* background-color:#7293ff; */

            position: relative; /* Required for absolute positioning */
            transition: top 0.5s ease; /* Smooth transition for the top property */
        }

		.hover-box:hover   {
			box-shadow: 0 0 5px #7293ff, inset 0 0 5px #7293ff;
			transition-delay: 0.6s;
        }
	</style>
</html>

